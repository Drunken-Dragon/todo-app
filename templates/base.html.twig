    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" href="{{ asset('symfony_favicon.png') }}">

    <title>{% block title %}My todos{% endblock %}</title>

    <!-- Bootstrap core CSS -->
